{
  "version": "trading_hat_rules_v1",
  "mode": "operator",
  "enforcement": {
    "fail_closed": true,
    "no_execution_authority": true,
    "require_explicit_commit": true
  },
  "risk": {
    "currency": "USD",
    "max_daily_loss": 400.0,
    "max_trade_risk": 100.0,
    "max_trades_per_day": 5,
    "stop_win": 300.0,
    "stop_loss": 400.0
  },
  "session": {
    "timezone": "America/New_York",
    "allowed_windows": [
      { "days": ["Mon", "Tue", "Wed", "Thu", "Fri"], "start_hhmm": "0930", "end_hhmm": "1200" }
    ]
  },
  "cooldowns": {
    "seconds_after_loss": 900,
    "seconds_after_win": 300,
    "seconds_after_refusal": 600
  },
  "psychology": {
    "block_on_urgency": true,
    "block_on_revenge": true,
    "max_reentry_attempts": 2
  }
}
